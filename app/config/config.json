{
  "$schema": "https://github.com/flux-eco/flux-eco-http-server",
  "endpoints": {
    "http": {
      "server": {
        "port": "${SERVER_PORT}",
        "host": "${SERVER_HOST}"
      },
      "policies": {
        "allowedHeaders": "${SERVER_REQUIRED_HEADERS}",
        "allowedIps": "${SERVER_ALLOWED_IPS}"
      },
      "middlewares": [
        "PoliciesMiddleware",
        "LoggingMiddleware",
        "ErrorHandlingMiddleware",
        "StaticFileMiddleware",
        ""
      ],
      "actions": [
        {
          "actionPath": "/",
          "method": "GET",
          "responseFile": "index.html",
          "headers": {}
        },
        {
          "actionPath": "/about",
          "method": "GET",
          "responseFile": "about.html",
          "headers": {}
        },
        {
          "actionPath": "/api/*",
          "method": "*",
          "apiName": "api",
          "apiAction": "handleApiRequest"
        }
      ]
    }
  }
}