{
  "$schema": "../../../flux-eco-app/app/schema/flux-eco-app-schema.json",
  "endpoints": {
    "http": {
      "server": {
        "port": "${SERVER_PORT}",
        "host": "${SERVER_HOST}"
      },
      "policies": {
        "authenticatedUsersOnly": {
          "path": "/",
          "allowedHeaders": "${SERVER_REQUIRED_HEADERS}",
          "allowedIps": "${SERVER_ALLOWED_IPS}"
        }
      },
      "static": {
        "path": "/public"
      },
      "actions": {
        "getRepositoryTree": {
          "name": "getRepositoryTree",
          "method": "GET",
          "path": "/getRepositoryTree"
        },
        "getUserData": {
          "name": "getUserData",
          "method": "GET",
          "path": "/getUserData"
        }
      }
    }
  },
  "bindings": {
    "iliasDatabase": {
      "server": {
        "port": "${DATABASE_PORT}",
        "host": "${DATABASE_HOST}",
        "database": "${DATABASE_DATABASE}",
        "password": "${DATABASE_PASSWORD}",
        "username": "${DATABASE_USERNAME}"
      },
      "boundActions": {
        "getRepositoryTree": "handleRepositoryTreeQuery"
      }
    }
  }
}